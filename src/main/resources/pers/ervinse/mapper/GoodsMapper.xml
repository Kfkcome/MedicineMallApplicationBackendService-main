<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace:命名空间，与下面语句的id一起组成查询的标识(相当于文件夹功能)-->
<!--namespace在使用动态代理时需要和dao接口的全类名相同-->
<mapper namespace="pers.ervinse.mapper.GoodsMapper">

    <!--根据条件查询-->
    <select id="selectHotGoods" resultType="pers.ervinse.domain.Commodity">
        select *
        from commodity_info
        order by CommoditySales desc limit 15;
    </select>
    <select id="selectByCommodityIDGoods" resultType="pers.ervinse.domain.Commodity">
        select *
        from commodity_info
        where CommodityID = #{CommodityID};
    </select>

</mapper>